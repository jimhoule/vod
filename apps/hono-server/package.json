{
  "name": "hono-server",
  "type": "module",
  "scripts": {
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "check-types": "tsc --noEmit",
    "start": "node ./dist/main.js",
    "trace": "node --trace_gc ./dist/main.js",
    "dev": "pnpm dotenvx -- tsx watch src/main.ts",
    "build": "tsup",
    "test": "pnpm dotenvx -- vitest run",
	"test:coverage": "pnpm dotenvx -- vitest run --coverage",
    "test:watch": "pnpm dotenvx -- vitest",
	"dotenvx": "dotenvx run -f ../../.env"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.7.3",
    "@packages/db": "workspace:*",
    "@packages/env": "workspace:*",
    "@packages/models": "workspace:*",
    "@packages/validations": "workspace:*",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1"
  }
}
